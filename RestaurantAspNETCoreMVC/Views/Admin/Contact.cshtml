@model IEnumerable<RestaurantAspNETCoreMVC.Models.Contact>

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Contact</h1>

<table class="table table-bordered table-dark table-hover" style="text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contact_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_Message)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_Message)
            </td>
            <td>
               
                <a asp-action="ContactDetails" asp-route-id="@item.Contact_Id">Details</a> |
                    <a asp-action="ContactDelete" asp-route-id="@item.Contact_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
