@model IEnumerable<RestaurantAspNETCoreMVC.Models.Feedback>

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Feedback</h1>

<table class="table table-bordered table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback_IceCream)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback_Message)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback_IceCream)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback_Message)
            </td>
            <td>
                    <a asp-action="FeedbackDetails" asp-route-id="@item.Feedback_Id">Details</a> |
                    <a asp-action="FeedbackDelete" asp-route-id="@item.Feedback_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
