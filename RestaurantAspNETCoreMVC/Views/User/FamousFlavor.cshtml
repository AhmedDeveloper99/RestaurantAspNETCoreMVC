@model IEnumerable<RestaurantAspNETCoreMVC.Models.Flavour>
@{
    ViewData["Title"] = "FamousFlavor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    .card{
        box-shadow: 0px 0 20px rgba(0, 0, 0, 0.3);
    }
</style>
<body>
    <div class="container-fluid" style="margin-top: 30px; display: flex; justify-content:center; align-items:center">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-11">

                    <div class="card" style="width: rem;">
                        <img src="@("~/famous_flavorIMG/"+item.Flavour_Image)" asp-append-version="true" width="400px" height="300px" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Flavour_Name</h5>
                            <p class="card-text">@item.Flavour_Desc</p>
                            @*  <a href="#" class="btn btn-primary">Order it</a> *@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html> 



