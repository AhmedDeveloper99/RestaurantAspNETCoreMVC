@model IEnumerable<RestaurantAspNETCoreMVC.Models.Flavour>
@{
    ViewData["Title"] = "FamousFlavor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">

                <div class="card" style="width: 18rem;">
                    <img src="@("~/famous_flavorIMG/"+item.Flavour_Image)" asp-append-version="true" width="300px" height="300px" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Flavour_Name</h5>
                        <p class="card-text">@item.Flavour_Desc</p>
                        <a href="#" class="btn btn-primary">Order it</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>